@model Plus1.Models.NewsArticle

@{
    ViewBag.Title = "Delete";
}
<div id="page-wrapper">
    <h2>Nieuwsartikel Verwijderen</h2>

    <h3>Weet u zeker dat u het nieuwsartikel wilt verwijderen?</h3>
    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                Titel
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Content)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Content)
            </dd>

            <dt>
                Datum & Tijd
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Verwijderen" class="btn btn-default" /> |
                @Html.ActionLink("Terug naar overzicht", "Index")
            </div>
        }
    </div>
    </div>