@model IEnumerable<Plus1.Models.SubSubCategory>

@{
    ViewBag.Title = "Index";
}
<div id="page-wrapper">
    <br />
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Maak een nieuwe subsubcategorie", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                <p><b>Naam</b></p>
            </th>
          
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
               
                <td>
                    @Html.ActionLink("Aanpassen", "Edit", new { id = item.Name }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Name }) |
                    @Html.ActionLink("Verwijderen", "Delete", new { id = item.Name })
                </td>
            </tr>
        }

    </table>
    </div>