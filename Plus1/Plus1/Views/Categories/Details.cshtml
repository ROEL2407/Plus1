@model Plus1.Models.CategoryViewModel


@{
    ViewBag.Title = "Details";
}

<div>
    <div class="brands backgrnd_cat">
        <div class="container">
            @foreach (var item in Model.Category)
            {
                <h3>Sub Categorieën: @item.Name</h3>
            }

                <div class="brands-agile">
                    @foreach (var item in Model.SubCategory)
    {
                <div class="col-md-4 w3layouts-brand">
                    <div class="brands-w3l">

                        <p>
                            @Html.ActionLink(item.Name, "Details", "SubCategory", new { id = item.Name }, null)
                        </p>
                    </div>
                </div>
}
                    <br />
                    <br />
                    <h3>Producten in deze categorie</h3>
                    <br />
                    @foreach (var item in Model.Products)
    {
                <div class="col-md-4 top_brand_left">
                    <div class="hover14 column">
                        <div class="agile_top_brand_left_grid">

                            <div class="agile_top_brand_left_grid1">
                                <figure>
                                    <div class="snipcart-item block">
                                        <div class="snipcart-thumb">
                                            <a href="/Products/Details/@Html.DisplayFor(modelItem => item.EAN)\"><img src="@Html.DisplayFor(modelItem => item.Image)" alt="" class="img-responsive" /></a>
                                            <p>  @Html.DisplayFor(modelItem => item.Title)</p>
                                            <p>Merk: @Html.DisplayFor(modelItem => item.Brand)</p>
                                            <h4>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </h4>

                                        </div>

                                    </div>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>

}
                </div>
        </div>
    </div>
</div>
