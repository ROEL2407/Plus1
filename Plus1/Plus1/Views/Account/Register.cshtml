@model Plus1.Models.RegisterViewModel

@{
    /**/

    ViewBag.Title = "Register";
}




@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="register">
        <div class="container">
            <h2>@ViewBag.Title.</h2>
            <div class="login-form-grids">
                <h5>Persoonlijke gegevens</h5>
                <form action="#" method="post">
                    @Html.TextBoxFor(m => m.Firstname, new { placeholder = "Voornaam...", @class = "form-control" })
                    @Html.TextBoxFor(m => m.Surname, new { placeholder = "Achternaam...", @class = "form-control" })
                </form>

                <h6>Login Informatie</h6>
                <form action="#" method="post">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Adres", @class = "form-control" })
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Wachtwoord", @class = "form-control" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Wachtwoord Bevestigen", @class = "form-control" })

                    @Html.LabelFor(m => m.UserRole, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">

                        @* @if (User.IsInRole("Admin"))
                            {
                        *@
                        @Html.RadioButtonFor(m => m.UserRole, "Admin", new { @class = "radio-inline" })@Html.Label("Admin")
                        @Html.RadioButtonFor(m => m.UserRole, "Webredacteur", new { @class = "radio-inline" })@Html.Label("Webredacteur")
                        @*}*@
                        @Html.RadioButtonFor(m => m.UserRole, "Bezoeker", new { @class = "radio-inline" })@Html.Label("Bezoeker")

                    </div>
                    <input type="submit" value="Register">
                </form>
            </div>

        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
