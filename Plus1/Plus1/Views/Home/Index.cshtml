@model Plus1.Models.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}


<div class="top-brands">
    <div class="container">
        <h2>alle aanbiedingsproducten een rijtje</h2>
        <div class="grid_3 grid_5">
            <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                <ul id="myTab" class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#expeditions" id="expeditions-tab" role="tab" data-toggle="tab" aria-controls="expeditions" aria-expanded="true">Producten</a></li>
                    <li role="presentation"><a href="#tours" role="tab" id="tours-tab" data-toggle="tab" aria-controls="tours">Aanbiedingen van vandaag</a></li>
                </ul>

                <div id="myTabContent" class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="expeditions" aria-labelledby="expeditions-tab">
                        <div class="agile-tp">
                        </div>
                        <div class="agile_top_brands_grids">

                            <table class="table">

                                @foreach (var item in Model.Products)
                                {
                                    <div class="col-md-4 top_brand_left" style="margin-bottom:30px">
                                        <div class="hover14 column">
                                            <div class="agile_top_brand_left_grid">

                                                <div class="agile_top_brand_left_grid1">
                                                    <figure>
                                                        <div class="snipcart-item block">
                                                            <div class="snipcart-thumb">

                                                                   <a href=/Products/Details/@Html.DisplayFor(modelItem => item.EAN) \><img src="@Html.DisplayFor(modelItem => item.Image)" alt="" class="img-responsive" /></a>
                                                                <p>  @Html.DisplayFor(modelItem => item.Title)</p>
                                                                <p>Merk: @Html.DisplayFor(modelItem => item.Title)</p>
                                                                <h4>
                                                                    @Html.DisplayFor(modelItem => item.Price) Euro<span>99.00 Euro</span>
                                                                </h4>

                                                            </div>

                                                        </div>
                                                    </figure>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }

                            </table>

                            <div class="clearfix"> </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
<div class="top-brands">
    <div class="container">
        <h2>Uitgelichte Nieuwsartikelen</h2>
        <div class="grid_3 grid_5">
            <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
               

                <div id="myTabContent" class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="expeditions" aria-labelledby="expeditions-tab">
                        <div class="agile-tp">
                        </div>
                        <div class="agile_top_brands_grids">

                            <table class="table">

                                @foreach (var item in Model.NewsArticle)
                                {
                                    <div class="col-md-4 top_brand_left" style="margin-bottom:30px">
                                        <div class="hover14 column">
                                            <div class="agile_top_brand_left_grid">

                                                <div class="agile_top_brand_left_grid1">
                                                    <figure>
                                                        <div class="snipcart-item block">
                                                            <a href="/NewsArticles1/Details/@Html.DisplayFor(modelItem => item.NewsArticleID)\">
                                                                <div class="snipcart-thumb">


                                                                    <p>  @Html.DisplayFor(modelItem => item.Title)</p>
                                                                    <p>Merk: @Html.DisplayFor(modelItem => item.Content)</p>


                                                                </div>
                                                            </a>
                                                        </div>
                                                    </figure>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }

                            </table>

                            <div class="clearfix"> </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

